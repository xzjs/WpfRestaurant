<Window x:Class="WpfRestaurant.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRestaurant"
        mc:Ignorable="d"
        Title="登录" Height="700" Width="1200" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="pic/login_bj.jpg" />
    </Window.Background>
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top">
                <TextBlock Text="720营地管理系统-餐厅前台" Foreground="White" FontSize="20" Margin="20" />
            </StackPanel>
            <DockPanel>
                <DockPanel Dock="Top">
                    <Image Source="pic/图片logo.png" Width="200"></Image>
                </DockPanel>
                <DockPanel Dock="Bottom">
                    <Image Source="pic/星河露营地文字logo.png" Width="200" Margin="0,0,0,10"></Image>
                </DockPanel>
                <Frame x:Name="PageFrame" NavigationUIVisibility="Hidden" />
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>