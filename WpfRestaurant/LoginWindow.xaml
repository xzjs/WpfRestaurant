<Window x:Class="WpfRestaurant.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRestaurant"
        mc:Ignorable="d"
        Title="LoginWindow" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="pic/bg.png"/>
    </Window.Background>
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top">
                <TextBlock Text="720营地管理系统-餐厅前台" Foreground="White" FontSize="20" Margin="20"></TextBlock>
            </StackPanel>
            <DockPanel>
                <Frame x:Name="PageFrame" NavigationUIVisibility="Hidden"></Frame>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
