<Page x:Class="WpfRestaurant.LobbyOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfRestaurant"
      mc:Ignorable="d"
      Title="LobbyOrderPage">
    <Page.Resources>
        <Style x:Key="border_style" TargetType="{x:Type Border}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver"  Value="True">
                    <Setter Property="Background" Value="LightBlue"></Setter>
                    <Setter Property="BorderBrush" Value="Black"></Setter>
                    <Setter Property="BorderThickness" Value="1"></Setter>
                    <Setter Property="CornerRadius" Value="45"></Setter>
                    <Setter Property="Padding" Value="1"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid>
        <StackPanel>
            <ItemsControl x:Name="BusyTableList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel></WrapPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Name="templeBorder" Style="{StaticResource border_style}">
                            <StackPanel Width="190" Height="90" Margin="10" MouseLeftButtonUp="StackPanel_MouseLeftButtonUp" Tag="{Binding Id}">
                                <StackPanel.Background>
                                    <ImageBrush ImageSource="pic/blue_button.png"/>
                                </StackPanel.Background>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel Width="80" Height="90" Orientation="Horizontal">
                                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="80" Foreground="White" Text="{Binding No}"/>
                                    </StackPanel>
                                    <StackPanel Width="110">
                                        <StackPanel Margin="0,15,0,0">
                                            <TextBlock HorizontalAlignment="Center" Foreground="#FF8F92FF" FontSize="20" Text="{Binding Status}"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <Image x:Name="paid_pic" Source="pic/paid_0.png" Width="30">
                                                </Image>
                                                <TextBlock VerticalAlignment="Center" FontSize="20">￥40.0</TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding Path=Paid}" Value="1">
                                <Setter TargetName="paid_pic" Property="Source" Value="pic/paid_1.png"></Setter>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl x:Name="FreeTableList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel></WrapPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="190" Height="90" Margin="10" MouseLeftButtonUp="StackPanel_MouseLeftButtonUp_1" Tag="{Binding Id}">
                            <StackPanel.Background>
                                <ImageBrush ImageSource="pic/green_button.png"/>
                            </StackPanel.Background>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Width="80"  Height="90" Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="80" Foreground="White" Text="{Binding No}"/>
                                </StackPanel>
                                <StackPanel Width="110" Orientation="Horizontal" VerticalAlignment="Center" Height="90">
                                    <TextBlock TextAlignment="Center" Width="110" FontSize="20" Foreground="Lime" VerticalAlignment="Center">
                                        <TextBlock.Text>
                                            <Binding Path="Status">
                                                <Binding.Converter>
                                                    <local:StatusConvert></local:StatusConvert>
                                                </Binding.Converter>
                                            </Binding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
           
            <WrapPanel>
                <StackPanel Width="190" Height="90" Margin="10">
                    <StackPanel.Background>
                        <ImageBrush ImageSource="pic/yellow_button.png"/>
                    </StackPanel.Background>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Width="80" Height="90" Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="80" Foreground="White" Text="A009"/>
                        </StackPanel>
                        <StackPanel Width="110"  VerticalAlignment="Center" Height="90">
                            <TextBlock TextAlignment="Center" Width="110" FontSize="20" Foreground="#FFFFCC00" VerticalAlignment="Center" Margin="0,20,0,0">预约</TextBlock>
                            <TextBlock Foreground="#FFFFCC00" FontSize="20" TextAlignment="Center">11:22</TextBlock>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel Width="190" Height="90" Margin="10">
                    <StackPanel.Background>
                        <ImageBrush ImageSource="pic/yellow_button.png"/>
                    </StackPanel.Background>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Width="80" Height="90" Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="80" Foreground="White" Text="A009"/>
                        </StackPanel>
                        <StackPanel Width="110"  VerticalAlignment="Center" Height="90">
                            <TextBlock TextAlignment="Center" Width="110" FontSize="20" Foreground="#FFFFCC00" VerticalAlignment="Center" Margin="0,20,0,0">预约</TextBlock>
                            <TextBlock Foreground="#FFFFCC00" FontSize="20" TextAlignment="Center">11:22</TextBlock>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel Width="190" Height="90" Margin="10">
                    <StackPanel.Background>
                        <ImageBrush ImageSource="pic/yellow_button.png"/>
                    </StackPanel.Background>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Width="80" Height="90" Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="80" Foreground="White" Text="A009"/>
                        </StackPanel>
                        <StackPanel Width="110"  VerticalAlignment="Center" Height="90">
                            <TextBlock TextAlignment="Center" Width="110" FontSize="20" Foreground="#FFFFCC00" VerticalAlignment="Center" Margin="0,20,0,0">预约</TextBlock>
                            <TextBlock Foreground="#FFFFCC00" FontSize="20" TextAlignment="Center">11:22</TextBlock>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel Width="190" Height="90" Margin="10">
                    <StackPanel.Background>
                        <ImageBrush ImageSource="pic/yellow_button.png"/>
                    </StackPanel.Background>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Width="80" Height="90" Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="80" Foreground="White" Text="A009"/>
                        </StackPanel>
                        <StackPanel Width="110"  VerticalAlignment="Center" Height="90">
                            <TextBlock TextAlignment="Center" Width="110" FontSize="20" Foreground="#FFFFCC00" VerticalAlignment="Center" Margin="0,20,0,0">预约</TextBlock>
                            <TextBlock Foreground="#FFFFCC00" FontSize="20" TextAlignment="Center">11:22</TextBlock>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
