<Page x:Class="WpfRestaurant.BookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfRestaurant"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="BookPage">

    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom">
                <Button Background="#FF199ED8"  FontSize="20" Foreground="White" Height="40">到店</Button>
            </StackPanel>
            <StackPanel x:Name="BookStackPanel" >
                <StackPanel Orientation="Horizontal" Margin="10,30,0,5">
                    <TextBlock Text="桌号:" FontSize="20"></TextBlock>
                    <TextBlock Text="{Binding Table_id}" FontSize="20" Margin="10,0"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                    <TextBlock Text="姓名:" FontSize="20"></TextBlock>
                    <TextBlock Text="{Binding Name}" FontSize="20" Margin="10,0"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                    <TextBlock Text="电话:" FontSize="20"></TextBlock>
                    <TextBlock Text="{Binding Phone}" FontSize="20" Margin="10,0"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                    <TextBlock Text="人数:" FontSize="20"></TextBlock>
                    <TextBlock Text="{Binding Counts}" FontSize="20" Margin="10,0"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                    <TextBlock Text="备注:" FontSize="20"></TextBlock>
                    <TextBlock Text="{Binding Remark}" FontSize="20" Margin="10,0"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                    <TextBlock Text="时间:" FontSize="20"></TextBlock>
                    <TextBlock Text="{Binding Time}" FontSize="20" Margin="10,0"></TextBlock>
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
