<Window x:Class="WpfRestaurant.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRestaurant"
        mc:Ignorable="d"
        Title="MenuWindow" Height="550" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Bottom">
                <Button Height="40" Background="#FF199ED8">确 定</Button>
            </StackPanel>
            <DockPanel>
                <StackPanel DockPanel.Dock="Left">
                    <Button Width="130" Height="40" Background="White">热菜</Button>
                    <Button Height="40" Background="White">凉菜</Button>
                    <Button Height="40" Background="White">饮品</Button>
                </StackPanel>
                <StackPanel>
                    <ListBox>
                        <ListBoxItem>
                            <DockPanel Width="240">
                                <StackPanel DockPanel.Dock="Left" Width="100">
                                    <Image Source="pic/menu.png"></Image>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" DockPanel.Dock="Right">
                                    <Button VerticalAlignment="Center" Width="20" Height="20">-</Button>
                                    <TextBlock VerticalAlignment="Center" Width="20" Height="20" TextAlignment="Center" FontSize="16">
                                        <TextBlock.Background>
                                            <ImageBrush ImageSource="pic/circle.png"/>
                                        </TextBlock.Background>1</TextBlock>
                                    <Button VerticalAlignment="Center" Width="20" Height="20">+</Button>
                                </StackPanel>
                                <StackPanel></StackPanel>
                            </DockPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <DockPanel Width="240">
                                <StackPanel DockPanel.Dock="Left" Width="100">
                                    <Image Source="pic/menu.png"></Image>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" DockPanel.Dock="Right">
                                    <Button VerticalAlignment="Center" Width="20" Height="20">-</Button>
                                    <TextBlock VerticalAlignment="Center" Width="20" TextAlignment="Center" FontSize="16">
                                        <TextBlock.Background>
                                            <ImageBrush ImageSource="pic/circle.png"/>
                                        </TextBlock.Background>1</TextBlock>
                                    <Button VerticalAlignment="Center" Width="20" Height="20">+</Button>
                                </StackPanel>
                                <StackPanel></StackPanel>
                            </DockPanel>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
